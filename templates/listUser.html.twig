{% include 'base.html.twig' %}

<div class="container">
    <div class="row">
        <a href="{{ path('formCreateUser') }}">Créer un utilisateur</a>
    </div>
    <div class="row">
        <div class="col border border-primary text-center">Nom</div>
        <div class="col border border-primary text-center">Prénom</div>
        <div class="col border border-primary text-center">Rôle</div>
    </div>
    {% for user in users %}
        <div class="row">
            <div class="col border border-dark">{{ user.nom }}</div>
            <div class="col border border-dark">{{ user.prenom }}</div>
            <div class="col border border-dark">{{ user.role.title }}</div>
        </div>
    {% endfor %}
</div>