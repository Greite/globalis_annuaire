{% include 'base.html.twig' %}

<div class="container">
    <div class="jumbotron">
        <form method="POST" action="{{ path('listUser') }}" class="container">
            <div class="row">
                <div class="form-group col">
                    <label for="nom">Nom : </label>
                    <input type="text" class="form-control" id="nom" name="nom" placeholder="Nom">
                </div>
                <div class="form-group col">
                    <label for="penom">Prénom(s) : </label>
                    <input type="text" class="form-control" id="prenom" name="prenom" placeholder="Prénom">
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="form-group col">
                    <p>Afficher les utilisateus actifs : </p>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="activeUser" id="yes" value="1" checked>
                        <label class="form-check-label" for="yes">Oui</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="activeUser" id="no" value="0">
                        <label class="form-check-label" for="no">Non</label>
                    </div>
                </div>
                <div class="form-group col">
                    <label for="role">Rôle : *</label>
                    <select class="form-control" id="role" name="role">
                        <option value=""></option>
                        {% for role in roles %}
                            <option value="{{ role.id }}">{{ role.title }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fas fa-filter"></i> Filtrer</button>
            <button type="reset" class="btn btn-danger"><i class="fas fa-times-circle"></i> Réinitialiser les filtres</button>
        </form>
    </div>
    <hr>
    {% if app.session.get('user').role.id == 1 %}
        <a href="{{ path('formCreateUser') }}" class="col">
            <button type="button" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Créer un utilisateur</button>
        </a>
    {% endif %}
    <span class="col">Nombres de resultats : {{ users | length }}</span>
    <hr>
    <table class="table">
        <thead class="thead-light">
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Rôle</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.role.title }}</td>
                <td>
                    {% if app.session.get('user').role.id == 1 %}
                        <a href="{{ path('deleteUser', {'id': user.id}) }}"><i class="fas fa-trash-alt"></i></a>
                    {% endif %}
                    {% if user.online %}
                        <i class="fas fa-user"></i>
                    {% else %}
                        <i class="fas fa-user-times"></i>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>