{% extends 'base.html.twig' %}

{% block title %}Creation Fonction - Annuaire Globalis{% endblock %}
{% block body %}
<form action="{{ path('createFonction') }}" method="POST" class="container">
    <div class="form-group">
        <label for="libelle">Libellé de la fonction : *</label>
        <input type="text" class="form-control" id="libelle" name="libelle" placeholder="Libellé de la fonction">
    </div>
    <input type="hidden" name="token" value="{{ csrf_token('create-fonction') }}" />
    <button type="submit" class="btn btn-primary">Ajouter</button>
</form>

{% if message is defined %}
    <div class="container">
        <hr>
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    </div>
{% endif %}
{% endblock %}